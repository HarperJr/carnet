<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnZoomIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:src="@drawable/ic_plus"
        android:tint="@color/colorAccent"
        app:borderWidth="0dp"
        app:fabCustomSize="42dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOrigin"
        app:layout_constraintEnd_toEndOf="@id/btnOrigin" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnZoomOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:src="@drawable/ic_minus"
        android:tint="@color/colorAccent"
        app:borderWidth="0dp"
        app:fabCustomSize="42dp"
        app:layout_constraintBottom_toTopOf="@+id/btnZoomIn"
        app:layout_constraintEnd_toEndOf="@+id/btnZoomIn" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="82dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:src="@drawable/ic_origin"
        android:tint="@color/colorAccent"
        app:borderWidth="0dp"
        app:fabCustomSize="42dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddNotification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginBottom="64dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:src="@drawable/ic_add_notification"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>